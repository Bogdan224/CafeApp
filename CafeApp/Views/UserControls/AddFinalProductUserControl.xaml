<UserControl x:Class="CafeApp.Views.UserControls.AddFinalProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel
            Margin="10">
            <Label
                FontSize="20"
                Foreground="White"
                HorizontalAlignment="Center"
                Content="Добавление блюда"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    Foreground="White"
                    Content="Название блюда:"/>
                <Label
                    Grid.Column="1"
                    Foreground="White"
                    Content="Цена:"/>
                <Label
                    Grid.Column="2"
                    Foreground="White"
                    Content="Категория:"/>
                <TextBox
                    x:Name="nameTextBox"
                    Grid.Row="1"
                    Margin="5"/>
                <TextBox
                    x:Name="priceTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"/>
                <ComboBox 
                    x:Name="groupComboBox"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="131*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    Foreground="White"
                    Content="Описание:" Grid.ColumnSpan="2"/>
                <TextBox
                    x:Name="descriptionTextBox"
                    Grid.Row="1"
                    Margin="5"
                    Height="40" Grid.ColumnSpan="2"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.2*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label
                Background="Transparent"
                Foreground="White"
                Content="Продукт:"
                HorizontalContentAlignment="Left"
                    />
                <Label
                Grid.Column="1"
                Background="Transparent"
                Foreground="White"         
                Content="Количество:"
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="2"
                Background="Transparent"
                Foreground="White"         
                Content="у.е."
                HorizontalContentAlignment="Left"/>

                <ComboBox
                x:Name="productComboBox"
                SelectionChanged="productComboBox_SelectionChanged"
                DisplayMemberPath="Name"
                Grid.Row="1" Margin="5 0"/>
                <TextBox
                x:Name="countTextBox"
                Grid.Row="1"
                Grid.Column="1"
                     Margin="5 0"/>
                <TextBox
                x:Name="unitTextBox"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalContentAlignment="Left"
                    Margin="5 0"
                Focusable="False"/>
                <Button
                Grid.Row="1"
                Grid.Column="4"
                Content="Добавить ингредиент" 
                     Margin="5 0"
                Click="addIngredientButton_Click"/>
            </Grid>

            <DataGrid
                Background="Transparent"
                x:Name="ingredientDataGrid"
                AutoGenerateColumns="False" 
                CanUserAddRows="False"
                CanUserResizeColumns="False"
                MaxHeight="170"
                Margin="5">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="1*"
                        Binding="{Binding Path=IngredientProduct.Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Название продукта:"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn 
                        Width="0.3*"
                        Binding="{Binding Path=Count}"
                        Foreground="Black"          
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Количество"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="0.2*"
                        Foreground="Black"
                    Binding="{Binding Path=IngredientProduct.ProductUnit}"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="у. е."/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button
            VerticalAlignment="Bottom"
            Width="150"
            Height="30"
            Margin="10"
            Content="Добавить" 
            Click="addButton_Click"/>
    </Grid>
</UserControl>
