<UserControl x:Class="CafeApp.Views.UserControls.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel 
            Margin="10">
            <Label
                FontSize="20"
                Foreground="White"
                HorizontalAlignment="Center"
                Content="Меню"/>
            <DataGrid
                Background="Transparent"
                x:Name="finalProductDataGrid"
                AutoGenerateColumns="False" 
                CanUserAddRows="False"   
                RowDetailsVisibilityMode="Visible"
                MaxHeight="350">

                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Width="*"
                        Binding="{Binding Path=Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Название"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="0.5*"
                        Binding="{Binding Path=Price}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Цена"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=Group}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Категория"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn 
                        Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Content="Описание"
                                    Click="descriptionButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button
            Margin="10"
            VerticalAlignment="Bottom"
            Width="150"
            Height="30"
            Content="Добавить блюдо" 
            Click="addFinalProductButton_Click"/>
    </Grid>
</UserControl>
