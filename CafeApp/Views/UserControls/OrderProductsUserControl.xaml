<UserControl x:Class="CafeApp.Views.UserControls.OrderProductsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel
            Height="auto"
            Margin="10">

            <Label
            Foreground="White"
            Background="Transparent"
            FontSize="20"            
            Content="Заказ"
            HorizontalContentAlignment="Center"/>
            <Label
            Foreground="White"
            Content="Поставщик"/>
            <ComboBox
                x:Name="providerComboBox"
                DisplayMemberPath="ProviderCompany.Name"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.4*"></ColumnDefinition>
                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                    <ColumnDefinition Width="0.2*"></ColumnDefinition>
                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label
                Background="Transparent"
                Foreground="White"
                Content="Продукт:"
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="1"
                Background="Transparent"
                Foreground="White"         
                Content="Количество:"
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="2"
                Background="Transparent"
                Foreground="White"         
                Content="у.е."
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="3"
                Background="Transparent"
                Foreground="White"         
                Content="Общая цена:"
                HorizontalContentAlignment="Left"/>
                <ComboBox
                x:Name="productComboBox"
                SelectionChanged="productComboBox_SelectionChanged"
                DisplayMemberPath="Name"
                Grid.Row="1"/>
                <TextBox
                x:Name="countTextBox"
                TextChanged="countTextBox_TextChanged"
                Grid.Row="1"
                Grid.Column="1"/>
                <TextBox
                x:Name="unitTextBox"
                Grid.Row="1"
                Grid.Column="2"
                Background="White"
                Foreground="Black"
                HorizontalContentAlignment="Left"
                Focusable="False"/>
                <TextBox
                Background="White"
                Foreground="Black"
                Margin="1 0"
                x:Name="totalPriceTextBox"
                Grid.Row="1"
                Grid.Column="3"
                Focusable="False"/>
                <Button
                Grid.Row="1"
                Grid.Column="4"
                Content="Добавить Продукт" 
                Click="addProductButton_Click"/>
            </Grid>

            <DataGrid
                Background="Transparent"
                x:Name="obtainedProductDataGrid"
                AutoGenerateColumns="False" 
                CanUserAddRows="False"
                CanUserResizeColumns="False">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=ProductInOrder.Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Название продукта:"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Path=ProductInOrder.Price}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Цена (1 у.е.):"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Path=TotalPrice}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Общая цена:"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="auto"
                        Binding="{Binding Path=Count}"
                        Foreground="Black"          
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Количество"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="auto"
                        Foreground="Black"
                    Binding="{Binding Path=ProductInOrder.ProductUnit}"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="у. е."/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
        <Button
        Margin="10"
        Width="150"
        Height="30"
        Content="Составить заказ"
        VerticalAlignment="Bottom" 
            Click="createOrderButton_Click"/>
    </Grid>

</UserControl>
