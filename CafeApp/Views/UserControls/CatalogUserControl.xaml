<UserControl x:Class="CafeApp.Views.UserControls.CatalogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.ColumnSpan="2">
            <Label
            FontSize="20"
            Foreground="White"
            Content="Каталог"
            HorizontalAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label
                Background="Transparent"
                Foreground="White"
                Content="Название:"
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="1"
                Background="Transparent"
                Foreground="White"         
                Content="Цена:"
                HorizontalContentAlignment="Left"/>
                <Label
                Grid.Column="2"
                Background="Transparent"
                Foreground="White"         
                Content="у. е.:"
                HorizontalContentAlignment="Left"/>
                <TextBox
                x:Name="nameTextBox"
                Grid.Row="1"/>
                <TextBox
                x:Name="priceTextBox"
                Grid.Row="1"
                Grid.Column="1"/>
                <ComboBox
                x:Name="unitComboBox"
                Grid.Row="1"
                Grid.Column="2"/>
                <Button
                Grid.Row="1"
                Grid.Column="3"
                Content="Добавить"
                Click="addProductButton_Click"/>
            </Grid>
            <DataGrid
            AutoGenerateColumns="False" 
            CanUserAddRows="False"
            CanUserResizeColumns="False"
            x:Name="catalogDataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                    Width="*"
                    Binding="{Binding Path=Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Название"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="0.5*"
                        Foreground="Black"
                    Binding="{Binding Path=Price}"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                            Foreground="Black"
                            Text="Цена"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn 
                        Width="0.5*"
                        Foreground="Black"
                    Binding="{Binding Path=ProductUnit}"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="у. е."/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button 
            VerticalAlignment="Bottom"
            Content="Сохранить изменения"
            Width="150"
            Height="30"
            Margin="10"
            Click="saveChangesButton_Click" 
            Grid.Column="1"/>
    </Grid>
</UserControl>
