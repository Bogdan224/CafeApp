<UserControl x:Class="CafeApp.Views.UserControls.StorageViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label
                FontSize="20"
                Content="Склад"
                Foreground="White"
                HorizontalAlignment="Center"/>
            
            <DataGrid
                Margin="10 0"
                Background="Transparent"
                x:Name="productSuplyDataGrid"
                AutoGenerateColumns="False" 
                CanUserAddRows="False"   
                RowDetailsVisibilityMode="Visible"
                MaxHeight="360">

                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Width="*"
                        Binding="{Binding Path=Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Название"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="0.5*"
                        Binding="{Binding Path=Price}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Цена"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Path=PricePremium}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Ценовая надбавка (%)"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="0.5*"
                        Binding="{Binding Path=StockBalance}"
                        Foreground="Black"          
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Количество"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn 
                        Width="*"
                        Binding="{Binding Path=Provider.ProviderCompany.Name}"
                        Foreground="Black"
                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock 
                                Foreground="Black"
                                Text="Поставщик"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button
            Grid.Column="0"
            Content="Заказать продукты"
            Width="150"
            Height="30"
            VerticalAlignment="Bottom"
            Margin="0 10"
            Click="orderButton_Click"/>
        </Grid>
        

    </Grid>
</UserControl>
