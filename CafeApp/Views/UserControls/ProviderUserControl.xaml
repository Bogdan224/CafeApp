<UserControl x:Class="CafeApp.Views.UserControls.ProviderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel 
            Margin="10">
            <Label
                FontSize="20"
                Foreground="White"
                HorizontalAlignment="Center"
                Content="Добавление поставщика"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    Foreground="White"
                    Content="ФИО руководителя:"/>
                <Label
                    Grid.Column="1"
                    Foreground="White"
                    Content="Номер телефона:"/>
                <TextBox
                    x:Name="directorNameTextBox"
                    Grid.Row="1"
                    Margin="5"/>
                <TextBox
                    x:Name="phoneNumberTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"/>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    Foreground="White"
                    Content="Название компании:"/>
                <Label
                    Grid.Column="1"
                    Foreground="White"
                    Content="Адрес:"/>
                <TextBox
                    x:Name="companyNameTextBox"
                    Grid.Row="1"
                    Margin="5"/>
                <TextBox
                    x:Name="addressTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"/>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    Foreground="White"
                    Content="Банк:"/>
                <Label
                    Grid.Column="1"
                    Foreground="White"
                    Content="Счет:"/>
                <Label
                    Grid.Column="2"
                    Foreground="White"
                    Content="ИНН:"/>
                <ComboBox
                    x:Name="bankComboBox"
                    Grid.Row="1"
                    Margin="5"/>
                <TextBox
                    x:Name="accountTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"/>
                <TextBox
                    x:Name="innTextBox"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"/>
            </Grid>
        </StackPanel>
        <Button
            VerticalAlignment="Bottom"
            Width="150"
            Height="30"
            Margin="10"
            Content="Добавить" 
            Click="addButton_Click"/>
    </Grid>
</UserControl>
